<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/include_titile_back_common"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_80dp"
        android:gravity="center"
        android:background="@drawable/home_style_kuang">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gou"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register_success"
            android:paddingLeft="@dimen/margin_10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/Black"/>
    </LinearLayout>


    <TextView
        android:id="@+id/login_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_register_tip"
        android:gravity="center"
        android:textColor="@color/style_title"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginTop="@dimen/pad_48dp"/>

</LinearLayout>
