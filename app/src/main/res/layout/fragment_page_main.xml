<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/margin_150dp"-->
                <!--android:src="@mipmap/meisi2"-->
                <!--android:scaleType="centerCrop"/>-->

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_hotpot"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/hg"/>
                    <TextView
                        android:id="@+id/page_vouchers"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_Vouchers"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/djj"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_Reservations"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/ydzw"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_takeout_food"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/wm"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_Buffet"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/zzc"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_cuisine"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/jzc"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_Snack"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/xckc"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_page_Western_style_food"
                        android:gravity="center_horizontal"
                        android:drawablePadding="@dimen/margin_5dp"
                        android:drawableTop="@mipmap/xc"/>
                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/include_10_layout_linear"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_130dp"
                        android:src="@mipmap/meisi1"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:padding="@dimen/margin_5dp"
                        android:text="@string/app_name"
                        android:background="@drawable/home_order_tip"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_10dp">
                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dp"
                        android:src="@mipmap/meisi1"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_80dp"
                        android:src="@mipmap/meisi1"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </LinearLayout>
            <include
                layout="@layout/include_10_layout_linear"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
