<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/include_titile_back_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_48dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="1dp"
            android:background="@color/Gainsboro">

        </LinearLayout>

        <TextView
            android:id="@+id/text_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/text_size_14_white"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"/>
        <LinearLayout
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="1dp"
            android:background="@color/Gainsboro">

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/include_recyclerview_list"/>

</LinearLayout>
