<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        layout="@layout/include_titile_back_common"/>

    <include
        layout="@layout/include_10_layout_linear"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_wallet"
            android:textColor="@color/text_base_color"
            android:textSize="@dimen/text_size_14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wallet_yue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_wallet_fh"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:textSize="22sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/include_10_layout_linear"/>

    <LinearLayout
        android:id="@+id/waller_set_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10dp">

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/me_wallet_set_pay"
            android:textSize="@dimen/text_size_14sp"
            android:drawablePadding="@dimen/margin_5dp"
            android:drawableLeft="@mipmap/wallet_pay_set"
            android:textColor="@color/Black"
            android:gravity="center_vertical"/>

        <include
            layout="@layout/include_rigth_btn"/>
    </LinearLayout>

    <include
        layout="@layout/include_1_layout_linear"/>


</LinearLayout>
